<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jpble.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/personal_center_background"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#19a5a5a5">

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/me_pic" />

        <ImageView
            android:id="@+id/me_pic_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/me_pic"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/me_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_pic_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Jars"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/me_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_name_tv"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/me_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shenzhen,china"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:background="#B4B4B4" />

            <TextView
                android:id="@+id/me_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890@163.com"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/me_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/my_trip"
                android:gravity="center"
                android:text="@string/me_trip"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/me_modify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/modify"
                android:gravity="center"
                android:text="@string/me_modify"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:padding="12dp"
                android:text="@string/me_equipment" />
            <View
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/me_about"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/me_about" />
            <View
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/me_bluetooth"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/me_bluetooth" />
            <View
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/me_sim"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/me_sim" />
            <View
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/me_device"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/me_device" />
            <View
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_height="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
